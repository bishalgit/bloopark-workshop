<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_slot_view_form" model="ir.ui.view">
        <field name="name">res.slot.form</field>
        <field name="model">res.slot</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="ground_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
